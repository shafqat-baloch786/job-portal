    <link rel="stylesheet" href="assets/css/nice-select.css">
    <link rel="stylesheet" href="assets/css/style.css">
</head>

<body>

    <main>

        <!-- Top bar -->
        <div class="top_bar">
            <h3>Online Job Finder</h3>
        </div>
        <!-- Top bar ending  -->

        <div class="form_wrapper shadow">

            <div class="my_form">
                <h3 class="register_btn">Job Posting</h3>
                <form action=" <%= current_url %> " method="POST">
                    <div class="mt-10">
                        <input type="text" name="title" placeholder="Title" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Title'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <textarea name="description" placeholder="Description" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Description'" required class="single-input"></textarea>
                    </div>
                    
                    <div class="mt-10">
                        <input type="number" name="salary" placeholder="Salary" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Salary'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="location" placeholder="Location" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Location'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="text" name="jobType" placeholder="Job Type" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Job Type'" required class="single-input">
                    </div>
                    <div class="mt-10">
                        <select name="experience" required class="single-input mb-10" style="margin-bottom: 10px !important;">
                            <option value="">Select Experience Level</option>
                            <option value="Entry level">Entry level</option>
                            <option value="Intermediate">Intermediate</option>
                            <option value="Expert">Expert</option>
                        </select>
                   </div>
                    <div class="mt-10">
                        <input type="text" name="position" placeholder="Position" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Position'" required class="single-input">
                    </div>

                    <div class="mt-20 w-100">
                        <button type="submit" class="redirect_button genric-btn primary text-center w-100">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </main>
    <footer>

        <!-- footer-bottom area -->
        <div class="footer-bottom-area footer-bg">
            <div class="container">
                <div class="footer-border">
                    <div class="row d-flex justify-content-between align-items-center">
                        <div class="copy_right">
                            <div class="footer-copy-right">
                                <p>Copyright @Job portal</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
        <!-- Footer End-->
    </footer>

    <!-- JS here -->

    <!-- All JS Custom Plugins Link Here here -->
    <!-- <script src="./assets/js/vendor/modernizr-3.5.0.min.js"></script> -->

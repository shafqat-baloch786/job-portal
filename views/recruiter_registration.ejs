<body>


    <main>

        <!-- Top bar -->
        <div class="top_bar">
            <h3>Online Job Finder</h3>
        </div>
        <!-- Top bar ending  -->

        <div class="form_wrapper shadow">

            <div class="my_form">
                <h3 class="register_btn">Recruiter</h3>
                <form action=" <%= current_url %> " method="POST" enctype="multipart/form-data">
                    <div class="mt-10">
                        <input type="text" name="fullname" placeholder="Full Name" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Full Name'" required="" class="single-input">
                    </div>
                    <div class="mt-10">
                        <input type="email" name="email" placeholder="Email address" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Email address'" required="" class="single-input">
                    </div>


                    <div class="mt-10">
                        <input type="number" name="phone_number" placeholder="Contact Number"
                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Contact address'" required=""
                            class="single-input">
                    </div>

                    <div class="mt-10">
                        <input type="password" name="password" placeholder="Password" onfocus="this.placeholder = ''"
                            onblur="this.placeholder = 'Password'" required="" class="single-input">
                    </div>

                    <!-- Profile field -->

                    <div class="form-group mt-10">
                        <label for="bio">Bio</label>
                        <textarea class="form-control" id="bio" name="bio" rows="3"></textarea>
                    </div>

                    <!-- Skills Field -->
                    <div class="form-group mt-10">
                        <label for="skills">Skills</label>
                        <input type="text" class="form-control" id="skills" name="skills"
                            placeholder="Enter skills, separated by commas">
                    </div>

                              <!-- Company Field (Dropdown or Text Input) -->
                              <div class="form-group mt-10">
                                <label for="company">Type your company</label>
                                <input type="text" class="form-control" id="company" name="company"
                                    placeholder="Enter you company name...">
                            </div>


                    <!-- Resume Upload Field -->
                    <!-- <div class="form-group mt-10">
                        <label for="resume">Resume</label>
                        <input type="file" class="form-control-file" id="resume" name="resume">
                    </div> -->

                    <!-- Profile Photo Field -->
                    <div class="form-group mt-10">
                        <label for="profilePhoto">Profile Photo</label>
                        <input type="file" class="form-control-file" id="profilePhoto" name="profilePhoto" accept="image/*">
                    </div>

                    <!-- <div class="alert alert-success" role="alert">
                     
                      </div>
                      <div class="alert alert-danger" role="alert">
                      
                      </div> -->

                    <!-- Profiel field ending -->
                    <div class="mt-20 w-100">
                        <button type="submit" class="redirect_button genric-btn primary text-center w-100">
                            Submit
                          </button>
                    </div>
                </form>
            </div>
        </div>

    </main>
    <footer>

        <!-- footer-bottom area -->
        <div class="footer-bottom-area footer-bg">
            <div class="container">
                <div class="footer-border">
                    <div class="row d-flex justify-content-between align-items-center">
                        <div class="copy_right">
                            <div class="footer-copy-right">
                                <p>Copyright @ISP</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
        <!-- Footer End-->
    </footer>

